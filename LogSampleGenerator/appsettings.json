{
  "CK-Monitoring": {
    "HandleDotNetLogs": true,
    "RootLogPath": "Logs",
    "GrandOutput": { // Configuration by handler (e.g. TextFileConfiguration -> TextFile)
      "Handlers": {
        "Console": true,
        "TextFile": {
          "Path": "Text"
        },
        "BinaryFile": {
          "UseGzipCompression": true,
          "Path": "CKMon"
        },
        "MQTT": {
          "ConnectionString": "localhost:1883",
          "LaunchLogViewer":  true
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
